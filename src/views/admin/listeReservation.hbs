
	{{#if client.Admin}}
	<div class="container  principal">
		<div class="admin attente">
			<h1 > Les Réservations</h1>
			<div class="container">
			<div class="ajouterresa">
				<div class="col-lg-12">
			  		<a href="/admin/ajoutReservation" class="btn btn-success btn-lg"> <i class="fas fa-plus"></i> Ajouter une Reservation</a>
				</div>
			</div>
			</div>
		
			<h2 > En attente</h2>
		
			<div class="table-wrapper-scroll-y  my-custom-scrollbar">
				
			  <table class="table table-bordered mb-0">
			    <thead class="tetetable">
			      <tr>
			        <th scope="col">NumResa</th>
					<th scope="col"> Num Client </th>
					<th scope="col"> Client </th>
					<th scope="col"> Nombre Personnes  </th>
					<th scope="col"> Location </th>
					<th scope="col"> Semaine Demandé </th>
					<th scope="col"> Date de la demande  </th>
					<th scope="col"> Valider </th>
					<th scope="col"> Refuser </th>



			      </tr>
			    </thead>
			    <tbody>
			      {{#each reservationAttente}}
					<tr>
						<th scope="row">{{NumResa}}</th>
						<td>{{NumClient}}</td>
						<td>{{NomClient}} {{PrenomClient}} </td>
						<td>{{NbPersResa}}</td>
						<td>{{LibeleLoc}}</td>
						<td>{{NumSemaine}}</td>
						<td>{{DateResa}}</td>
						
						
						<td> <button class="btn btn-success" data-toggle="modal" data-target="#myModal{{NumResa}}Valide"> <i class="far fa-check-circle"></i> Valider </button> </td>

						<!-- Modal -->
						<div id="myModal{{NumResa}}Valide" class="modal modalsuppr fade" role="dialog">
						  <div class="modal-dialog">
						    <div  id="myModal" class="modal-content">
						      <div class="modal-header">
						      	<h4 class="modal-title">Validation de réservation</h4>
						        <button type="button" class="close" data-dismiss="modal">&times;</button>
						        
						      </div>
						      <div class="modal-body">
						        <p>Êtes vous sûre de vouloir valider cette réservation (n° {{NumResa}}) </p>
						      </div>
						      <div class="modal-footer">
						        <a href="/admin/valideResa/{{NumResa}}"class="btn btn-success"> <i class="far fa-check-circle"></i> Valider</a>
						      </div>
						    </div>

						  </div>
						</div>


						<td> <button class="btn btn-danger" data-toggle="modal" data-target="#myModal{{NumResa}}Refus"> <i class="far fa-times-circle"></i> Refuser</button> </td>

						<!-- Modal -->
						<div id="myModal{{NumResa}}Refus" class="modal modalsuppr fade" role="dialog">
						  <div class="modal-dialog">
						    <div  id="myModal" class="modal-content">
						      <div class="modal-header">
						      	<h4 class="modal-title">Refus de réservation</h4>
						        <button type="button" class="close" data-dismiss="modal">&times;</button>
						        
						      </div>
						      <div class="modal-body">
						        <p>Êtes vous sûre de vouloir refuser cette réservation (n° {{NumResa}}) </p>
						      </div>
						      <div class="modal-footer">
						        <a href="/admin/refusResa/{{NumResa}}"class="btn btn-danger"> <i class="far fa-times-circle"></i> Refuser</a>
						      </div>
						    </div>

						  </div>
						</div>

						
					</tr>
				{{else}}
						<h2> Il n'y a pas de réservation en attente </h2>

				{{/each}}
			    </tbody>
			  </table>
			 </div>
		  
		</div>

		<div class="admin valide">
			<h2 > Validé </h2>
			<div class="table-wrapper-scroll-y  my-custom-scrollbar">
				
			  <table class="table table-bordered mb-0">
			    <thead class="tetetable">
			      <tr>
			        <th scope="col">NumResa</th>
					<th scope="col"> Num Client </th>
					<th scope="col"> Client </th>
					<th scope="col"> Nombre Personnes  </th>
					<th scope="col"> Location </th>
					<th scope="col"> Semaine Demandé </th>
					<th scope="col"> Date de la demande  </th>
					{{!-- <th scope="col"> Suppr </th> --}}

			      </tr>
			    </thead>
			    <tbody>
			      {{#each reservationValide}}
					<tr>
						<th scope="row">{{NumResa}}</th>
						<td>{{NumClient}}</td>
						<td>{{NomClient}} {{PrenomClient}} </td>
						<td>{{NbPersResa}}</td>
						<td>{{LibeleLoc}}</td>
						<td>{{NumSemaine}}</td>
						<td>{{DateResa}}</td>
						{{!-- 
						<td><a href="/admin/supprResa/{{NumResa}}" class="btn btn-danger">Supprimer</a></td> --}}

						
					</tr>
				{{else}}
						<h2> Il n'y a pas de réservation Validé</h2>

				{{/each}}
			    </tbody>
			  </table>
			  
			</div>
		</div>
		<div class="admin refuse">
			<h2 > Refusé </h2>
			<div class="table-wrapper-scroll-y  my-custom-scrollbar">
				
			  <table class="table table-bordered mb-0">
			    <thead class="tetetable">
			      <tr>
			        <th scope="col">NumResa</th>
					<th scope="col"> Num Client </th>
					<th scope="col"> Client </th>
					<th scope="col"> Nombre Personnes  </th>
					<th scope="col"> Location </th>
					<th scope="col"> Semaine Demandé </th>
					<th scope="col"> Date de la demande  </th>
					{{!-- <th scope="col"> Suppr </th> --}}

			      </tr>
			    </thead>
			    <tbody>
			      {{#each reservationRefuse}}
					<tr>
						<th scope="row">{{NumResa}}</th>
						<td>{{NumClient}}</td>
						<td>{{NomClient}} {{PrenomClient}} </td>
						<td>{{NbPersResa}}</td>
						<td>{{LibeleLoc}}</td>
						<td>{{NumSemaine}}</td>
						<td>{{DateResa}}</td>
						{{!-- 
						<td><a href="/admin/supprResa/{{NumResa}}" class="btn btn-danger">Supprimer</a></td> --}}

						
					</tr>
				{{else}}
						<h2> Il n'y a pas de réservation Refusé</h2>

				{{/each}}
			    </tbody>
			  </table>
			  
			</div>
		</div>

</div>



	
{{else}}
  <div class="container principal">
    <h1 class="titlenotadmin"> Cet espace est reservé aux administrateurs<h1>
      <div class="fin ">
      </div>
    </div>
      

{{/if}}








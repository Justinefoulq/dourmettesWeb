<div class="container  principal">
	{{#if client.Admin}}
		<div class="admin">
			<h1 > Liste des relations 'Appliquer'</h1>
		</div>
		<div class="table-wrapper-scroll-y  my-custom-scrollbar">
				

		  <table class="table table-bordered mb-0">
		    <thead class="tetetable">
		      <tr>
		      	<th scope="col">Location</th>
		      	<th scope="col">Saison</th>
		      	<th scope="col">Tarif</th>
		      	<th scope="col">Suplement</th>
				<th scope="col"> Suppr </th>


		      </tr>
		    </thead>
		    <tbody>

		    	{{#each applique}}
			  		<tr>
			  			<th scope="row"> {{ LibeleLoc }} </th>
			  			<td scope ="row">{{ LibSaison }} </td>
			  			<td scope ="row">{{ PrixSemaine }} €/sem </td>
			  			<td scope ="row">{{	SuplementNbPersSup4 }} /pers </td>
			  			<td> <button class="btn btn-danger" data-toggle="modal" data-target="#myModal{{NumTarif}}/{{NumLoc}}/{{NumSaison}}"><i class="fas fa-trash-alt"></i></button></td>

						<!-- Modal -->
						<div id="myModal{{NumTarif}}/{{NumLoc}}/{{NumSaison}}" class="modal modalsuppr fade" role="dialog">
						  <div class="modal-dialog">
						    <div  id="myModal" class="modal-content">
						      <div class="modal-header">
						      	<h4 class="modal-title">Suppression relation Applique</h4>
						        <button type="button" class="close" data-dismiss="modal">&times;</button>
						        
						      </div>
						      <div class="modal-body">
						        <p>Êtes vous sûre de vouloir supprimer cette relation ? (Tarif :{{PrixSemaine}} € - Location : {{LibeleLoc}} - Saison: {{LibSaison}}) </p>
						      </div>
						      <div class="modal-footer">
						        <form method="post" action="/admin/supprApplique/{{NumTarif}}/{{NumLoc}}/{{NumSaison}}?_method=DELETE">
									<input type="hidden" name="_method" value="DELETE">
										<button type="submit"class="btn btn-danger"> OUI  <i class="fas fa-trash-alt"></i></button>					
								</form>
						      </div>
						    </div>

						  </div>
						</div>
			  			
			  			
				</tbody>
				</tr>
				{{else}}
					<h2> Il n'y a pas de relations appliquer  </h2>

				{{/each}}

		      
		    </tbody>
		  </table>
		  
		</div>
		<div class="container">
			<div class="ajouter">
				<div class="col-lg-12">
			  		<a href="/admin/appliqueTarifs" class="btn btn-success btn-lg"> <i class="fas fa-plus"></i> Ajouter une relation </a>

				</div>
			</div>
		</div>

	
</div>



	
{{else}}
  <div class="container principal">
    <h1 class="titlenotadmin"> Cet espace est reservé aux administrateurs<h1>
      <div class="fin ">
      </div>
    </div>
      

{{/if}}

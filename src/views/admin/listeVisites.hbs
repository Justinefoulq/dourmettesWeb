<div class="container  principal">
	{{#if client.Admin}}
		<div class="admin">
			<h1 > Liste des Visites </h1>
		</div>
		<div class="table-wrapper-scroll-y  my-custom-scrollbar">
				

		  <table class="table table-bordered mb-0">
		    <thead class="tetetable">
		      <tr>
		        <th scope="col">NumVisites </th>
				<th scope="col">Titre Visite </th>
				<th scope="col">Description Visite  </th>
				<th scope="col"> Url Site </th>
				<th scope="col"> Url Photo </th>
				<th scope="col"> Modif </th>
				<th scope="col"> Suppr </th>

		      </tr>
		    </thead>
		    <tbody>
		      {{#each visites}}
				<tr>
					<th scope="row">{{NumVisite}} </th>
					<td>{{TitreVisite}}</td>
					<td>{{DescriptionVisite}}</td>
					<td>{{UrlSiteVisite}}</td>
					<td>{{UrlPhotoVisite}}</td>
					<td><a href="/admin/modifVisite/{{NumVisite}}" class="btn btn-info"><i class="fas fa-eraser"></i></a></td>
					<!-- Trigger the modal with a button -->
					 <td> <button class="btn btn-danger" data-toggle="modal" data-target="#myModal{{NumVisite}}"><i class="fas fa-trash-alt"></i></button></td>

					<!-- Modal -->
					<div id="myModal{{NumVisite}}" class="modal modalsuppr fade" role="dialog">
					  <div class="modal-dialog">
					    <div  id="myModal" class="modal-content">
					      <div class="modal-header">
					      	<h4 class="modal-title">Suppression Visite</h4>
					        <button type="button" class="close" data-dismiss="modal">&times;</button>
					        
					      </div>
					      <div class="modal-body">
					        <p>Êtes vous sûre de vouloir supprimer cette visite? (n° {{NumVisite}}) </p>
					      </div>
					      <div class="modal-footer">
					        <form method="post" action="/admin/supprVisite/{{NumVisite}}?_method=DELETE">
								<input type="hidden" name="_method" value="DELETE">
									<button type="submit"class="btn btn-danger"> <i class="fas fa-trash-alt"></i></button>					
							</form>
					      </div>
					    </div>

					  </div>
					</div>

					{{!-- <form method="post" action="/admin/supprVisite/{{NumVisite}}?_method=DELETE">
						<input type="hidden" name="_method" value="DELETE">
							<td><button type="submit"class="btn btn-danger"> <i class="fas fa-trash-alt"></i></button></td>					
					</form> --}}

				</tr>
			{{else}}
					<h2> Il n'y a pas de visite </h2>

			{{/each}}
		    </tbody>
		  </table>
		  
		</div>
		<div class="container">
			<div class="ajouter">
				<div class="col-lg-12">
			  		<a href="/admin/ajoutVisite" class="btn btn-success btn-lg"> <i class="fas fa-plus"></i> Ajouter une Visite</a>
				</div>
			</div>
		</div>

	
</div>



	
{{else}}
  <div class="container principal">
    <h1 class="titlenotadmin"> Cet espace est reservé aux administrateurs<h1>
      <div class="fin ">
      </div>
    </div>
      

{{/if}}
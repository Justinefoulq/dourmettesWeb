<div class="container  principal">
	{{#if client.Admin}}
		<div class="admin">
			<h1 > Liste des saisons </h1>
		</div>
		<div class="table-wrapper-scroll-y  my-custom-scrollbar">
				

		  <table class="table table-bordered mb-0">
		    <thead class="tetetable">
		      <tr>
		        <th scope="col">NumSaison</th>
				<th scope="col">Libelle Saison </th>
				<th scope="col">Semaine Debut  </th>
				<th scope="col"> Semaine Fin  </th>
				<th scope="col"> Modif </th>
				<th scope="col"> Suppr </th>

		      </tr>
		    </thead>
		    <tbody>
		      {{#each saison}}
				<tr>
					<th scope="row">{{NumSaison}}</th>
					<td>{{LibSaison}}</td>
					<td>{{SemDebutSaison}}</td>
					<td>{{SemFinSaison}}</td>
					<td><a href="/admin/modifSaison/{{NumSaison}}" class="btn btn-info"><i class="fas fa-eraser"></a></td>
					<form method="post" action="/admin/supprSaison/{{NumSaison}}?_method=DELETE">
						<input type="hidden" name="_method" value="DELETE">
							<td><button type="submit"class="btn btn-danger"> <i class="fas fa-trash-alt"></i></button></td>					
					</form>

					
				</tr>
			{{else}}
					<h2> Il n'y a pas de saison </h2>

			{{/each}}
		    </tbody>
		  </table>
		  
		</div>
		<div class="container">
			<div class="ajouter">
				<div class="col-lg-12">
			  		<a href="/admin/ajoutSaison" class="btn btn-success btn-lg"> <i class="fas fa-plus"></i> Ajouter une Saison</a>
				</div>
			</div>
		</div>

	
</div>



	
{{else}}
  <div class="container principal">
    <h1 class="titlenotadmin"> Cet espace est reserv√© aux administrateurs<h1>
      <div class="fin ">
      </div>
    </div>
      

{{/if}}
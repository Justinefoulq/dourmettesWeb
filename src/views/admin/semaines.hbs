<div class="container  principal">
	{{#if client.Admin}}
		<div class="admin">
			<h1 > Liste des Semaines </h1>
		</div>
		<div class="table-wrapper-scroll-y  my-custom-scrollbar">
				

		  <table class="table table-bordered mb-0">
		    <thead class="tetetable">
		      <tr>
		        <th scope="col">NumSemaine</th>
				<th scope="col">Date Debut </th>
				<th scope="col">Date Fin </th>
				<th scope="col"> Modif </th>
				<th scope="col"> Suppr </th>

		      </tr>
		    </thead>
		    <tbody>
		      {{#each semaine}}
				<tr>
					<th scope="row">{{NumSemaine}}</th>
					<td>{{DateDebutSemaine}}</td>
					<td>{{DateFinSemaine}}</td>
					<td><a href="/admin/modifSemaine/{{NumSemaine}}" class="btn btn-info">M</a></td>
					<td><a href="/admin/supprSemaine/{{NumSemaine}}"class="btn btn-danger">X</a></td>

					
				</tr>
			{{else}}
					<h2> Il n'y a pas de semaine </h2>

			{{/each}}
		    </tbody>
		  </table>
		  
		</div>
		<div class="container">
			<div class="ajouter">
				<div class="col-lg-12">
			  		<a href="/admin/ajoutSemaine" class="btn btn-success btn-lg"> Ajouter une Semaine</a>
				</div>
			</div>
		</div>

	
</div>



	
{{else}}
  <div class="container principal">
    <h1 class="titlenotadmin"> Cet espace est reserv√© aux administrateurs<h1>
      <div class="fin ">
      </div>
    </div>
      

{{/if}}
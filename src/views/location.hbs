<div class="container principal ">
       <h1 class="titreloc"> {{location.LibeleLoc}}</h1> 
       <div class="row">

          <div class="col-lg-7">
            <div class="card mb-10">

              <div class="card-body store-body">
                <div class="product-info">
                  <div class="product-gallery">
                  		<!--CAROUSSELLL -->
                      <div id="carous" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>

                        </ol>
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img src="../img/gite2.jpg" class="d-block w-100" alt="photo gites">
                          </div>
                          <div class="carousel-item">
                            <img src="../img/gite3.jpg" class="d-block w-100" alt="photo gites">
                          </div>
                          <div class="carousel-item">
                            <img src="../img/gite4.jpg" class="d-block w-100" alt="photo gites">
                           </div>
                           <div class="carousel-item">
                            <img src="../img/etang.jpg" class="d-block w-100" alt="photo gites">
                           </div>

                    </div>

                    <a class="carousel-control-prev" href="#carous" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carous" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
                  </div>
                    <div class="product-description mb-5">
                      <h2 class="mb-5"> Equipements</h2>
                      <dl class="row mb-5">
                        <dt class="col-sm-4">Nombre Personne: </dt>
                        <dd class="col-sm-8"> {{location.NbPlaceLoc}}   pers</dd>
                        <dt class="col-sm-4">Superficie: </dt>
                        <dd class="col-sm-8">{{location.SuperficieLoc}}   m²</dd>
                        <dt class="col-sm-4">Nb Chambre: </dt>
                        <dd class="col-sm-8">{{location.NbChambreLoc}}   chambres</dd>
                        <dt class="col-sm-4">Nb Salles de Bains: </dt>
                        <dd class="col-sm-8">{{location.NbSalleBainLoc}}   sdb</dd>
                      </dl>
                      <h2 class="mb-5">Description</h2>
                      <p> {{location.DescriptifLoc}} </p>
                      

                    </div>

                   
                    <div class="product-comments">
                      
                      <h2 class="mb-5">Les Avis</h2>
                      <ol class="list-unstyled ">
                        <li> AVIS CLIENT</li>
                      </ol>
                    </div>
                  </div>
                </div>

              </div>
          </div>

          <div class="col-lg-5">
            
            	<div class="card reservationlocation">
            		<div class="card-header">
            			Reservation
            		</div>
            		<div class="card-body">
            			METTRE GESTION RESERVATION 
            			DATE ARRIVEE 
            			DATE DEPART 
            			NP PERSONNE 
            		</div>

            	</div>

            	<div class="card tariflocation">
            		<div class="card-header">
            			Tarif de la location
            		</div>
            		<div class="card-body">
            			METTRE GESTION TARIF SAISONNIER 
            			TARIF EN FONCTION SAISON 
            			NB NUITE MINIMUM 
            		</div>
            		
            	</div>

            	<div class="card disponibilitelocation">
            		<div class="card-header">
            			Disponibilité de la location
            		</div>
            		<div class="card-body">
            			METTRE GESTION DISPONIBILITE LOCATION
            			DATE NON DISPO
            			DATE EN ATTENTE
            			DATE DISPO
            		</div>
            	
            </div>
          </div>

          </div>
        </div>
      </div>

<div class="container principal ">
       <h1 class="titreloc"> {{location.LibeleLoc}}</h1> 
       <div class="row">

          <div class="col-lg-7">
            <div class="card mb-10">

              <div class="card-body store-body">
                <div class="product-info">
                  <div class="product-gallery">
                      <!--CAROUSSELLL -->
                      <div id="carous" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="8"></li>
                          <li data-target="#carouselExampleIndicators" data-slide-to="9"></li>
                        </ol>
                          
                          <div class="carousel-inner">
                            <div class="carousel-item active">
                            <img src="../img/dourmettes2.jpg" class="d-block w-100" alt="photo location">
                          </div>

                          {{#each photos}}
                              <div class="carousel-item ">
                                <img src="{{CheminPhoto}}" class="d-block w-100" alt="photo location">
                              
                              </div>
                         {{/each}}
                          

                    </div>

                    <a class="carousel-control-prev" href="#carous" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carous" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
                  </div>
                    <div class="product-description mb-5">
                      <h2 class="mb-5"> Equipements</h2>
                      <dl class="row mb-5">
                        <dt class="col-sm-4">Nombre Personne: </dt>
                        <dd class="col-sm-8"> {{location.NbPlaceLoc}}   pers</dd>
                        <dt class="col-sm-4">Superficie: </dt>
                        <dd class="col-sm-8">{{location.SuperficieLoc}}   m²</dd>
                        <dt class="col-sm-4">Nb Chambre: </dt>
                        <dd class="col-sm-8">{{location.NbChambreLoc}}   chambres</dd>
                        <dt class="col-sm-4">Nb Salles de Bains: </dt>
                        <dd class="col-sm-8">{{location.NbSalleBainLoc}}   sdb</dd>
                      </dl>
                      <h2 class="mb-5">Description</h2>
                      <p> {{location.DescriptifLoc}} </p>
                      

                    </div>

                   
                    <div class=" card product-comments">
                      <div class="card-header">Les Avis de cette location
                      
                      </div>
                      <div class="card-body">
                        <div class="listscrollavis">
                          <ul>
                            {{#each avis}}
                            <li>
                              <div class="card avis">
                               
                               <div class="card-body">
                                  <div class="row ">
                                      <h2> <i class="far  fa-user-circle"></i> {{PrenomClient}} {{NomClient}}</h2>
                                  </div>
                                  <div class="corpavis">
                                    <div class="row">
                                       <h1> {{TitreAvis}} - {{NoteAvis}}/5 </h1> 
                                    </div>
                                     <div class="row">
                                        <p>{{CommentaireAvis}}</p>
                                    </div>   
                                  </div>
                                  <h3> Publié le {{DateAvis}} </h3>
                             </div>
                           </li>
                           {{else}}
                           <h3> Il n'y a pas encore d'avis</h3>
                           {{/each}}
                         </ul>
                        </div>
                      {{#if client}}
                        <div class="boutonavis">
                         <a href="/ajoutAvis/{{location.NumLoc}}/{{client.NumClient}}" class="btn btn-success "> Laisser un avis </a>
                       </div>
                       {{/if}}
                      </div>         
                    </div>

                  
                  </div>
                </div>

              </div>
          </div>

          <div class="col-lg-5">
            
              <div class="card reservationlocation">
                <div class="card-header">
                  Demande de Reservation
                </div>
                <div class="card-body">
                  <div class="row formresa">

                    <form action ="/creareservation/{{client.NumClient}}/{{location.NumLoc}}" method="POST">
                        <h5> Nombre de personnes</h5>
                        <div class="form-group " id='locationform'>
                            <i class="far fa-user"></i>
                            <input type="number" class="form-control"  placeholder="Nb< {{location.NbPlaceLoc}} "  name="NbPersResa"  min="1" max="{{location.NbPlaceLoc}}"required>
                        </div>
                 

                         <div class="pickerweek"> 
                            <h5> Semaine demandé </h5>
                           <select class=form-control name="NumSemaine">

                            {{#each semdispo}}
                             <option  value="{{NumSemaine}}"> {{NumSemaine}} : Du {{DateDebutSemaine}} au  {{DateFinSemaine}}</option> 
                            {{/each}}
                               
                          </select>




                       </div>
                      </div>
                      {{#if client}}
                        <div class="boutonresa">
                         <button type="Submit" class="btn btn-success "> Demander la reservation </button>
                       </div>
                     {{else}}
                     <div class="row notconnect">
                      <h5> Pour faire une demande de réservation , connectez vous ! </h5>
                        <div class="boutonresa">
                         <a href="/connexion" class="btn btn-success "> Connexion </a>
                       </div>
                     </div>
                       {{/if}}

                    </form>
                    
                  </div>
                </div>
              <div class="card tariflocation">
                <div class="card-header">
                  Tarifs du {{location.LibeleLoc}}
                </div>
                <div class="card-body">
                  <div class="table-wrapper-scroll-ytarif  my-custom-scrollbartarif">
                     <table class="table table-bordered mb-0">
                      <thead class="tetetabletarif">
                        <tr>
                          <th scope="col">Saison</th>
                          <th scope="col">Semaine Debut </th>
                          <th scope="col">Semaine Fin </th>
                          <th scope="col">Prix Semaine </th>
                          <th scope="col">Prix par Personne et par jour si > 4 </th>


                        </tr>
                      </thead>
                      <tbody>

                         {{#each saison}}
                          <tr>
                            <th scope="row"> {{LibSaison}}</th>
                            <td>{{SemDebutSaison}}</td>
                            <td>{{SemFinSaison}}</td>
                            <td> {{PrixSemaine}} € </td>
                            <td> {{SuplementNbPersSup4}} €/pers/j</td>
                            
                          </tr>
                        {{else}}
                        <h2> Il n'y a pas encore de tarifs spécifiés</h2>

                      {{/each}}
                            
                    
                      </tbody>
                    </table>
                  </div>
              
                </div>

                
              </div>

              <div class="card disponibilitelocation">
                <div class="card-header">
                  Disponibilité de la location
                </div>
                <div class="card-body">

                    <div class="listscroll">
                      <ul>
                      {{#each semdispo}}
                      <li> Semaine {{NumSemaine}} : Du {{DateDebutSemaine}} au  {{DateFinSemaine}} </li>
                      {{/each}}
                    </ul>
                    </div>
                 
                
                </div>
              
            </div>
          </div>

          </div>
        </div>
      </div>